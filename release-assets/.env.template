# Whether the app should trust proxy headers like X-Forwarded-For
# Use "false" if not behind a proxy, or the proxy IP (e.g. "172.17.0.1")
TRUST_PROXY=false

# Number of concurrent video processing jobs allowed
CONCURRENCY=1

# Encoding preset for MP4 conversion (e.g., ultrafast, superfast, medium, slow, etc.)
VIDEO_ENCODING_PRESET=ultrafast

# Constant Rate Factor (CRF) for MP4 quality (0=lossless, typical: 18â€“28)
VIDEO_CRF=28

# Basic auth username for the web interface
ADMIN_USER=admin

# Basic auth password for the web interface
ADMIN_PASSWORD=changeme

# Allowed CORS origins (comma-separated). Use "*" to allow all.
CORS_ALLOWED_ORIGINS=*

# Upload rate limiting (max attempts before cooldown)
UPLOAD_RATE_LIMIT_MAX_ATTEMPTS=5
UPLOAD_RATE_LIMIT_COOLDOWN_MINUTES=1

# Maximum upload file size in megabytes
UPLOAD_SIZE_LIMIT_MB=3000

# Authentication rate limiting (max failed logins before cooldown)
AUTH_RATE_LIMIT_MAX_ATTEMPTS=3
AUTH_RATE_LIMIT_COOLDOWN_MINUTES=5

# General rate limiting (requests per IP before cooldown)
GENERAL_RATE_LIMIT_MAX_ATTEMPTS=100
GENERAL_RATE_LIMIT_COOLDOWN_MINUTES=1
